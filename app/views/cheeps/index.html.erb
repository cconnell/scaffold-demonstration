<p id="notice"><%= notice %></p>

<h1>Cheeps</h1>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cheeps.each do |cheep| %>
      <tr>
        <td><%= cheep.content %></td>
        <td><%= cheep.user_id %></td>
        <td><%= link_to 'Show', cheep %></td>
        <td><%= link_to 'Edit', edit_cheep_path(cheep) %></td>
        <td><%= link_to 'Destroy', cheep, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Cheep', new_cheep_path %>
